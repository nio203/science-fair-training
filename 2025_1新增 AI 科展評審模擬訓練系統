                answer: "æˆ‘å€‘èªç‚ºä¸‹ä¸€æ­¥æœ€é‡è¦çš„æ˜¯æé«˜å¯¦é©—çš„å£“åŠ›æ¢ä»¶å’Œè¦æ¨¡ã€‚ç†æƒ³çš„è©±ï¼Œå¸Œæœ›èƒ½ä½¿ç”¨çœŸæ­£çš„é«˜å£“åæ‡‰é‡œï¼Œé”åˆ°100å€‹å¤§æ°£å£“ä»¥ä¸Šï¼Œæ›´æ¥è¿‘æ·±æµ·ç’°å¢ƒã€‚åŒæ™‚æ“´å¤§å¯¦é©—è¦æ¨¡ï¼Œä½¿ç”¨å…¬å‡ç´šçš„åæ‡‰é‡ï¼Œé€™æ¨£æ•¸æ“šæœƒæ›´æœ‰èªªæœåŠ›ã€‚æˆ‘å€‘ä¹Ÿæƒ³ç ”ç©¶ç¢³é…¸æ°«éˆ£çš„é•·æœŸç©©å®šæ€§ï¼Œç¢ºå®šå®ƒåœ¨é«˜å£“ä½æº«ä¸‹çœŸçš„ä¸æœƒåˆ†è§£ã€‚å¦‚æœæœ‰æ©Ÿæœƒï¼Œæœ€å¸Œæœ›èƒ½åšæµ·æ´‹å¯¦åœ°æ¸¬è©¦ã€‚",
                keyPoints: ["æé«˜å£“åŠ›æ¢ä»¶", "æ“´å¤§å¯¦é©—è¦æ¨¡", "é•·æœŸç©©å®šæ€§", "æµ·æ´‹å¯¦åœ°æ¸¬è©¦", "è¨­å‚™æŠ€è¡“å‡ç´š"]
            },
            {
                category: "æœªä¾†ç™¼å±•",
                question: "ä½ å€‘æœ‰è€ƒæ…®éé€™å€‹æŠ€è¡“çš„æˆæœ¬æ•ˆç›Šå—ï¼Ÿ",
                answer: "æˆ‘å€‘åšäº†ç°¡å–®çš„ä¼°ç®—ã€‚å‡è¨­æˆ‘å€‘å¯¦é©—çš„æ¯”ä¾‹ï¼š3å…‹ç‰¡è £æ®¼ç²‰èƒ½å›ºå®š12mLçš„COâ‚‚ï¼ˆæ‰£é™¤ç‰©ç†æº¶è§£ï¼‰ï¼Œæ›ç®—æˆå¯¦éš›é‡é‡å¤§ç´„æ˜¯0.02å…‹COâ‚‚ã€‚å¦‚æœæ”¾å¤§åˆ°å·¥æ¥­è¦æ¨¡ï¼Œ1å…¬å™¸ç‰¡è £æ®¼ç²‰ç†è«–ä¸Šèƒ½å›ºå®šç´„6.7å…¬æ–¤COâ‚‚ã€‚é›–ç„¶ç¾åœ¨çœ‹èµ·ä¾†æ•ˆç‡ä¸é«˜ï¼Œæˆæœ¬ä¹Ÿå¾ˆè²´ï¼Œä½†è€ƒæ…®åˆ°ç‰¡è £æ®¼æ˜¯å»¢æ£„ç‰©ã€æµ·æ´‹ç©ºé–“å…è²»ï¼Œè€Œä¸”é‚„è§£æ±ºäº†å»¢æ£„ç‰©å•é¡Œï¼Œé•·æœŸä¾†èªªå¯èƒ½é‚„æ˜¯åˆ’ç®—çš„ã€‚ç•¶ç„¶é€™éœ€è¦æ›´ç²¾ç¢ºçš„ç¶“æ¿Ÿåˆ†æã€‚",
                keyPoints: ["æˆæœ¬æ•ˆç›Šä¼°ç®—", "è¦æ¨¡åŒ–æ•ˆç›Š", "å»¢æ£„ç‰©åƒ¹å€¼", "é›™é‡æ•ˆç›Šåˆ†æ", "ç¶“æ¿Ÿå¯è¡Œæ€§"]
            },
            {
                category: "æœªä¾†ç™¼å±•",
                question: "å¤§è¦æ¨¡æ‡‰ç”¨é€™å€‹æŠ€è¡“å¯èƒ½å¸¶ä¾†å“ªäº›ç’°å¢ƒé¢¨éšªï¼Ÿä½ å€‘å¦‚ä½•è©•ä¼°ï¼Ÿ",
                answer: "æˆ‘å€‘è­˜åˆ¥å‡ºå¹¾å€‹æ½›åœ¨é¢¨éšªï¼šç¬¬ä¸€æ˜¯æµ·æ´‹é…¸åŒ–ï¼Œé›–ç„¶æˆ‘å€‘çš„å¯¦é©—é¡¯ç¤ºé…¸åŒ–ç¨‹åº¦è¼•å¾®ï¼Œä½†å¤§è¦æ¨¡æŠ•æ”¾é‚„æ˜¯è¦è¬¹æ…ï¼›ç¬¬äºŒæ˜¯å°æµ·åº•ç”Ÿç‰©çš„å½±éŸ¿ï¼Œæ²‰ç©çš„ç‰¡è £æ®¼ç²‰å¯èƒ½æ”¹è®Šæµ·åºŠç’°å¢ƒï¼›ç¬¬ä¸‰æ˜¯æ´‹æµè®ŠåŒ–çš„å½±éŸ¿ï¼Œå¦‚æœç¢³é…¸æ°«éˆ£æº¶æ¶²éš¨æ´‹æµä¸Šå‡åˆ°æ·ºæµ·ï¼Œå¯èƒ½æœƒé‡æ–°é‡‹æ”¾COâ‚‚ã€‚æˆ‘å€‘å»ºè­°æ¡ç”¨åˆ†éšæ®µæ¸¬è©¦ï¼šå…ˆå°è¦æ¨¡è©¦é©—â†’ç”Ÿæ…‹å½±éŸ¿è©•ä¼°â†’é€æ­¥æ“´å¤§â†’é•·æœŸç›£æ¸¬ã€‚çµ•å°ä¸èƒ½ç‚ºäº†å›ºç¢³è€Œç ´å£æµ·æ´‹ç”Ÿæ…‹ã€‚",
                keyPoints: ["ç’°å¢ƒé¢¨éšªè­˜åˆ¥", "æµ·æ´‹é…¸åŒ–é¢¨éšª", "ç”Ÿæ…‹å½±éŸ¿è©•ä¼°", "åˆ†éšæ®µæ¸¬è©¦", "ç”Ÿæ…‹ä¿è­·å„ªå…ˆ"]
            }
        ];

        let currentQuestion = 0;
        let currentMode = 'flashcard';
        let userAnswers = [];
        let userScores = [];

        function startMode(mode) {
            currentMode = mode;
            document.getElementById('modeSelection').style.display = 'none';
            document.getElementById('flashcard').style.display = 'block';
            document.getElementById('controls').style.display = 'flex';
            
            if (mode === 'ai-quiz') {
                document.getElementById('answerMode').style.display = 'block';
                document.getElementById('referenceAnswer').style.display = 'none';
            } else {
                document.getElementById('answerMode').style.display = 'none';
                document.getElementById('referenceAnswer').style.display = 'block';
            }

            if (mode === 'random') {
                // éš¨æ©Ÿæ‰“äº‚é¡Œç›®é †åº
                for (let i = questions.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [questions[i], questions[j]] = [questions[j], questions[i]];
                }
                if (currentMode !== 'ai-quiz') {
                    document.getElementById('answerMode').style.display = 'none';
                    document.getElementById('referenceAnswer').style.display = 'block';
                }
            }
            
            loadQuestion();
            updateWordCount();
        }

        function loadQuestion() {
            const question = questions[currentQuestion];
            document.getElementById('questionCategory').textContent = question.category;
            document.getElementById('questionText').textContent = question.question;
            document.getElementById('referenceAnswerText').textContent = question.answer;
            
            document.getElementById('currentCard').textContent = currentQuestion + 1;
            document.getElementById('totalCards').textContent = questions.length;
            
            // é‡ç½®ç•Œé¢
            document.getElementById('answerTextarea').value = '';
            document.getElementById('aiEvaluation').style.display = 'none';
            document.getElementById('showRefBtn').style.display = 'none';
            
            updateNavigation();
        }

        function updateWordCount() {
            const textarea = document.getElementById('answerTextarea');
            const wordCount = document.getElementById('wordCount');
            
            textarea.addEventListener('input', function() {
                wordCount.textContent = `å­—æ•¸: ${this.value.length}`;
            });
        }

        function submitToAI() {
            const answer = document.getElementById('answerTextarea').value.trim();
            if (!answer) {
                alert('è«‹å…ˆè¼¸å…¥ç­”æ¡ˆï¼');
                return;
            }
            
            userAnswers[currentQuestion] = answer;
            
            // é¡¯ç¤ºAIè©•åˆ†éç¨‹
            document.getElementById('aiEvaluation').style.display = 'block';
            document.getElementById('aiThinking').style.display = 'flex';
            document.getElementById('aiResults').style.display = 'none';
            document.getElementById('submitBtn').disabled = true;
            
            // æ¨¡æ“¬AIè©•åˆ†éç¨‹ï¼ˆ2-4ç§’ï¼‰
            setTimeout(() => {
                const aiScore = evaluateAnswer(answer, questions[currentQuestion]);
                showAIResults(aiScore);
            }, 2000 + Math.random() * 2000);
        }

        function evaluateAnswer(userAnswer, question) {
            // AIè©•åˆ†é‚è¼¯
            const answerLength = userAnswer.length;
            const keyPoints = question.keyPoints;
            let score = 5; // åŸºç¤åˆ†æ•¸
            let feedback = '';
            let matchedPoints = [];

            // æª¢æŸ¥ç­”æ¡ˆé•·åº¦
            if (answerLength < 50) {
                score -= 2;
                feedback += 'å›ç­”éæ–¼ç°¡çŸ­ï¼Œå»ºè­°æä¾›æ›´è©³ç´°çš„èªªæ˜ã€‚';
            } else if (answerLength > 300) {
                score += 1;
                feedback += 'å›ç­”è©³ç´°å®Œæ•´ã€‚';
            }

            // æª¢æŸ¥é—œéµè¦é»
            keyPoints.forEach(point => {
                const keywords = point.split(/[ã€ï¼Œ,]/);
                const hasKeyword = keywords.some(keyword => 
                    userAnswer.includes(keyword.trim()) || 
                    userAnswer.includes(keyword.trim().substring(0, 2))
                );
                if (hasKeyword) {
                    score += 1;
                    matchedPoints.push(point);
                }
            });

            // æª¢æŸ¥å°ˆæ¥­è¡“èª
            const technicalTerms = ['CaCOâ‚ƒ', 'COâ‚‚', 'Ca(HCOâ‚ƒ)â‚‚', 'äº¨åˆ©å®šå¾‹', 'å‹’æ²™ç‰¹åˆ—', 'å£“åŠ›', 'æº«åº¦', 'å¯¦é©—', 'æ•¸æ“š'];
            const termCount = technicalTerms.filter(term => userAnswer.includes(term)).length;
            if (termCount >= 3) {
                score += 1;
                feedback += 'ä½¿ç”¨äº†é©ç•¶çš„å°ˆæ¥­è¡“èªã€‚';
            }

            // æª¢æŸ¥é‚è¼¯çµæ§‹
            if (userAnswer.includes('ç¬¬ä¸€') || userAnswer.includes('é¦–å…ˆ') || userAnswer.includes('å¦å¤–')) {
                score += 1;
                feedback += 'å›ç­”çµæ§‹æ¸…æ™°ã€‚';
            }

            // é™åˆ¶åˆ†æ•¸ç¯„åœ
            score = Math.max(1, Math.min(10, score));

            return {
                score: score,
                feedback: feedback,
                matchedPoints: matchedPoints,
                suggestions: generateSuggestions(score, matchedPoints, keyPoints)
            };
        }

        function generateSuggestions(score, matchedPoints, allKeyPoints) {
            let suggestions = '';
            
            if (score >= 8) {
                suggestions = 'å„ªç§€çš„å›ç­”ï¼ä½ å±•ç¾äº†å°ç ”ç©¶çš„æ·±å…¥ç†è§£ã€‚å¯ä»¥å˜—è©¦åŠ å…¥æ›´å¤šå…·é«”çš„å¯¦é©—æ•¸æ“šä¾†æ”¯æŒè«–é»ã€‚';
            } else if (score >= 6) {
                suggestions = 'ä¸éŒ¯çš„å›ç­”ï¼ä½ æŒæ¡äº†åŸºæœ¬æ¦‚å¿µã€‚å»ºè­°å¯ä»¥æ›´è©³ç´°åœ°èªªæ˜å¯¦é©—éç¨‹å’Œçµæœã€‚';
            } else if (score >= 4) {
                suggestions = 'å›ç­”é‚„å¯ä»¥æ”¹é€²ã€‚å»ºè­°å¤šåƒè€ƒå¯¦é©—å ±å‘Šä¸­çš„å…·é«”æ•¸æ“šå’Œç§‘å­¸åŸç†ä¾†è±å¯Œç­”æ¡ˆã€‚';
            } else {
                suggestions = 'éœ€è¦åŠ å¼·å°ç ”ç©¶å…§å®¹çš„ç†è§£ã€‚å»ºè­°é‡æ–°é–±è®€å¯¦é©—å ±å‘Šï¼Œç‰¹åˆ¥æ³¨æ„å¯¦é©—è¨­è¨ˆå’Œçµæœåˆ†æéƒ¨åˆ†ã€‚';
            }

            const missedPoints = allKeyPoints.filter(point => !matchedPoints.includes(point));
            if (missedPoints.length > 0) {
                suggestions += ` é‚„å¯ä»¥æåˆ°ï¼š${missedPoints.slice(0, 2).join('ã€')}ç­‰è¦é»ã€‚`;
            }

            return suggestions;
        }

        function showAIResults(aiResult) {
            document.getElementById('aiThinking').style.display = 'none';
            document.getElementById('aiResults').style.display = 'block';
            
            // é¡¯ç¤ºåˆ†æ•¸
            const scoreCircle = document.getElementById('scoreCircle');
            scoreCircle.textContent = aiResult.score;
            scoreCircle.style.borderColor = getScoreColor(aiResult.score);
            
            // é¡¯ç¤ºåé¥‹
            document.getElementById('aiFeedback').textContent = aiResult.suggestions;
            
            // é¡¯ç¤ºè©•åˆ†è¦é»
            const keyPointsList = document.getElementById('keyPointsList');
            keyPointsList.innerHTML = '';
            questions[currentQuestion].keyPoints.forEach(point => {
                const li = document.createElement('li');
                li.textContent = point;
                if (aiResult.matchedPoints.includes(point)) {
                    li.style.color = '#90EE90';
                    li.textContent += ' âœ“';
                }
                keyPointsList.appendChild(li);
            });
            
            userScores[currentQuestion] = aiResult.score;
            document.getElementById('showRefBtn').style.display = 'inline-block';
            document.getElementById('submitBtn').disabled = false;
            
            updateStats();
        }

        function getScoreColor(score) {
            if (score >= 8) return '#26de81';
            if (score >= 6) return '#4facfe';
            if (score >= 4) return '#ffa726';
            return '#ef5350';
        }

        function showReference() {
            document.getElementById('referenceAnswer').style.display = 'block';
        }

        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                loadQuestion();
            }
        }

        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                loadQuestion();
            }
        }

        function updateNavigation() {
            document.getElementById('prevBtn').disabled = currentQuestion === 0;
            document.getElementById('nextBtn').disabled = currentQuestion === questions.length - 1;
        }

        function updateStats() {
            const completed = userScores.filter(score => score !== undefined).length;
            const average = completed > 0 ? 
                (userScores.reduce((sum, score) => sum + (score || 0), 0) / completed).toFixed(1) : 0;
            
            document.getElementById('completedQuestions').textContent = completed;
            document.getElementById('averageScore').textContent = average;
        }

        // åˆå§‹åŒ–
        document.getElementById('totalQuestions').textContent = questions.length;
    </script>
</body>
</html>
